<view class="container">
  <view class="section">
    <view class="section-header">概念查询</view>
    <input class="input-box" type="text" placeholder="输入概念名称" bindinput="onConceptNameChange" />
    <button class="search-button" bindtap="searchConcept">查询概念</button>
    <view wx:if="{{conceptInfo}}">
      <h3>{{conceptInfo.name}}</h3>
      <p><strong>概述:</strong> {{conceptInfo.overview}}</p>
      <p><strong>原理:</strong> {{conceptInfo.principle}}</p>
      <p><strong>应用:</strong> {{conceptInfo.application}}</p>
      <p><strong>其他信息:</strong> {{conceptInfo.otherInfo}}</p>
    </view>
  </view>

  <view class="separator"></view> <!-- 分隔符 -->

  <view class="section">
    <view class="section-header">软件兼容查询</view>
    <picker class="picker-box" mode="selector" range="{{softwareList}}" bindchange="onSoftwareNameChange">
      <view class="picker-placeholder">选择软件名称</view>
    </picker>
    <view wx:if="{{selectedSoftware}}">
      <view class="selected-software">
        <text>已选择软件: {{selectedSoftware.name}}</text>
      </view>
    </view>
    <input class="input-box" type="text" placeholder="输入软件版本" bindinput="onSoftwareVersionChange" />
    <button class="search-button" bindtap="searchCompatibility">查询兼容性</button>
  </view>

  <view class="separator"></view> <!-- 分隔符 -->

  <view class="section">
    <view class="section-header">查看π后面第n位数字</view>
    <input class="input-box" type="number" placeholder="输入1到7400之间的数字" bindinput="onPiDigitIndexChange" />
    <button class="search-button" bindtap="searchPiDigit">查询</button>
    <view wx:if="{{piDigitResult}}">
      <h3>π的第{{piDigitIndex}}位数字是: {{piDigitResult}}</h3>
    </view>
  </view>
</view>