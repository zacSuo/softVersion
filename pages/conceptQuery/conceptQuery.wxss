/* pages/conceptQuery/conceptQuery.wxss */

.container {
  padding: 20px;
  font-family: Arial, sans-serif;
}

.input-section {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}

.input-box {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.search-button {
  padding: 10px 20px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.search-button:hover {
  background-color: #005bb5;
}

.result-section {
  margin-top: 20px;
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f9f9f9;
}

.result-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
}

.result-item {
  margin-bottom: 15px;
}

.result-title {
  font-weight: bold;
  margin-bottom: 5px;
}

.result-content {
  line-height: 1.5;
}